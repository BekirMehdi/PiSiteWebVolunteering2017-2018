<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell_pc.volunteering.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">


    <Button
        android:id="@+id/button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="position" />
    <TextView
        android:id="@+id/tv_event_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="name"/>
    <ImageView
        android:id="@+id/imgEventBig"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_event_detail_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_event_detail_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgEventBig"
        android:text="duration"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_event_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="type"/>

</RelativeLayout>
