<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell_pc.volunteering.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail"
    android:background="@drawable/back"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over">
<RelativeLayout
    android:id="@+id/relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 android:layout_centerHorizontal="true"
    android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/imgEventBig"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@id/tv_event_detail_name"
            android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_event_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="name"/>

</RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/relative"
       android:layout_centerHorizontal="true"
            android:id="@+id/relativeT">





    <TextView
        android:id="@+id/tv_event_detail_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="duration"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/relativeT"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_event_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="type"

            android:layout_centerHorizontal="true"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btDelete"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
android:paddingTop="@android:dimen/thumbnail_height"
            android:layout_centerHorizontal="true"
            android:text="Delete" />
        </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_event_detail_type"
        android:layout_centerHorizontal="true"
        android:text="position"
        android:background="@color/colorPrimary"

        android:textColor="@android:color/white" />


    </RelativeLayout>

</RelativeLayout>
