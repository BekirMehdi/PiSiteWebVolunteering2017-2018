<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell_pc.volunteering.AjoutEventActivity"
    tools:showIn="@layout/activity_ajout_event">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_nameEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Votre texte ici"
            android:inputType="text"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/et_typeEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votre texte ici"
            android:inputType="text"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votre texte ici"
            android:inputType="text"
            android:layout_centerHorizontal="true" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votre texte ici"
            android:inputType="text"
            android:layout_centerHorizontal="true" />



        <EditText
            android:id="@+id/et_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votre texte ici"
            android:inputType="text"
            android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:layout_centerHorizontal="true" />
    </LinearLayout>

    </ScrollView>

</LinearLayout>

